{{! index.mustache }}
{{<base}}
{{$header}}
{{<header}}
    {{$title}}PayFact! | Cobranza{{/title}}
    {{$links}}
    <link rel="stylesheet" type="text/css" href="/css/Cliente.css">
    <link rel="stylesheet" type="text/css" media="all" href="/css/jsDatePick_ltr.min.css" />
    <script type="text/javascript" src="/js/jsDatePick.min.1.3.js"></script>
    <script type="text/javascript">
    	window.onload = function(){
    		new JsDatePick({
    			useMode:2,
    			target:"inputField",
    			dateFormat:"%d-%M-%Y"
    		});
    	};
    </script>
    {{/links}}
    {{/header}}
    {{/header}}
    {{$content}}
    {{$navbar}}
    {{<navbar}}
    {{/navbar}}
    {{/navbar}}
    <div class="text-left">
        <h1 class="">Gestion de Cobranza</h1>
    </div>

<form class="row navbar-form" role="search" action="/inicio/gestion/clientes" method="post">

    <hr>

    <div class="row">
        <div class="col-sm-12 col-md-12">
            <div class="col-sm-2 col-md-2 navbar-text">
                Tipo de gestión:
            </div>
            <div class="col-sm-2 col-md-2 btn-group">
                <select name="cobranza" class="input-small form-control" id ="Select1">
                    {{#tipos}}
                        <option value="{{idtipocobranza}}">{{nombretipo}}</option>
                    {{/tipos}}
                </select>
            </div>
            <div class="col-sm-1 col-md-1 navbar-text">Opciones:</div>
                <div class="col-sm-4 col-md-4 btn-group">
                    <select name="opcion" class="input-small form-control" id ="Select1" >
                        {{#tipos}}
                            <option value="{{idtipocobranza}}">{{resultado}}</option>
                        {{/tipos}}
                    </select>
                </div>
        </div>
    </div>

    <div class="row" style="">
        <div class="col-sm-3 col-md-3 navbar-text">Fecha de la gestión de la cobranza:</div>
        <div class="col-sm-4 col-md-4 input-group date">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
            <input name="fecha" id="inputField" type="text" class="form-control">
        </div>
    </div>

    <div class="row" style="">
        <div class="col-sm-1 col-md-1 navbar-text">Observaciones</div>
        <div class="col-sm-8 col-md-8 col-sm-offset-1">
            <textarea name="descripcion" class="form-control" contenteditable="false"></textarea>
        </div>
    </div>

    <div class="row" style="margin-top:20px;">
        <div class="navbar-text col-sm-2">Responsable de la cobranza</div>
        <div class="col-sm-4">
            <input name="responsable" type="text" class="form-control" contenteditable="false">
        </div>
    </div>

    <hr>

    <div class="row" style="">
        <div class="col-sm-offset-4 col-sm-2 form-group">
            <button class="btn btn-primary btn-lg btn-block">Enviar</button>
        </div>
    </div>
</form>
{{/content}}
{{/base}}
