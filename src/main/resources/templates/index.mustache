<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
  <div class="modal-content">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
          <span class="name text-center">{{name}}</span>
          <p class="text-center">Gestiona las facturas y pagos de tus deudores. </p>
      </div>
      <div class="col-md-8 col-md-offset-2 form-group  alert alert-danger alert-dismissible {{active}}" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          Error
        </div>
      <div class="modal-body">
          <form class="form col-md-12 center-block" action="/" method="post">

            <div class="form-group">
                <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input type="text" name="username" class="form-control input-lg" placeholder="Nombre de usuario">
                </div>
            </div>

            <div class="form-group">
                <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                      <input type="password" name="password" class="form-control input-lg" placeholder="Contraseña">
                </div>
            </div>
            <div class="form-group">
              <button class="btn btn-primary btn-lg btn-block">Sign In</button>
            </div>
          </form>
      </div>
      <div class="modal-footer" >
      </div>
  </div>
  </div>
</div>

<script src="http://code.jquery.com/jquery-latest.js"></script>
